// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  password   String
  role       String   @default("owner")
  companyId  String   @map("company_id")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")
  deletedAt  DateTime? @map("deleted_at")

  company Company @relation(fields: [companyId], references: [id])

  @@map("users")
}

model Company {
  id          String   @id @default(uuid())
  name        String
  gstin       String?  @unique
  address     String?
  email       String?
  state       String?
  stateCode   String?  @map("state_code")
  logoUrl     String?  @map("logo_url")
  settingsJson Json?   @map("settings_json") @db.JsonB
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  deletedAt   DateTime? @map("deleted_at")

  users      User[]
  clients    Client[]
  items      Item[]
  templates  InvoiceTemplate[]
  invoices   Invoice[]
  sequences  InvoiceSequence[]

  @@map("companies")
}

model Client {
  id            String   @id @default(uuid())
  companyId     String   @map("company_id")
  name          String
  gstin         String?
  billingAddress  String?  @map("billing_address")
  shippingAddress String?  @map("shipping_address")
  state         String?
  stateCode     String?  @map("state_code")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  deletedAt     DateTime? @map("deleted_at")

  company Company @relation(fields: [companyId], references: [id])
  invoices Invoice[]

  @@map("clients")
}

model Item {
  id        String   @id @default(uuid())
  companyId String   @map("company_id")
  name      String
  hsnCode   String?  @map("hsn_code")
  unit      String
  basePrice Decimal  @map("base_price") @db.Decimal(10, 2)
  taxRate   Decimal  @default(0) @map("tax_rate") @db.Decimal(5, 2)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  company       Company @relation(fields: [companyId], references: [id])
  invoiceItems  InvoiceItem[]

  @@map("items")
}

model InvoiceTemplate {
  id         String   @id @default(uuid())
  companyId  String   @map("company_id")
  name       String
  htmlTemplate String? @map("html_template") @db.Text
  cssStyles  String?  @map("css_styles") @db.Text
  layoutJson Json?    @map("layout_json") @db.JsonB
  isDefault  Boolean  @default(false) @map("is_default")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")
  deletedAt  DateTime? @map("deleted_at")

  company  Company  @relation(fields: [companyId], references: [id])
  invoices Invoice[]

  @@map("invoice_templates")
}

model Invoice {
  id                String   @id @default(uuid())
  companyId         String   @map("company_id")
  clientId          String   @map("client_id")
  templateId        String?  @map("template_id")
  invoiceNo         String   @map("invoice_no")
  date              DateTime @db.Date
  status            String   @default("draft")
  totalAmount       Decimal  @map("total_amount") @db.Decimal(10, 2)
  taxAmount         Decimal  @default(0) @map("tax_amount") @db.Decimal(10, 2)
  notes             String?  @db.Text
  eWayBillNo        String?  @map("e_way_bill_no")
  deliveryNote      String?  @map("delivery_note")
  modeTermsOfPayment String? @map("mode_terms_of_payment")
  supplierRef       String?  @map("supplier_ref")
  otherReferences   String?  @map("other_references")
  buyerOrderNo      String?  @map("buyer_order_no")
  buyerOrderDate    DateTime? @map("buyer_order_date") @db.Date
  despatchDocumentNo String? @map("despatch_document_no")
  deliveryNoteDate  DateTime? @map("delivery_note_date") @db.Date
  despatchedThrough String?  @map("despatched_through")
  destination       String?  @map("destination")
  termsOfDelivery   String?  @map("terms_of_delivery")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")
  deletedAt          DateTime? @map("deleted_at")

  company  Company  @relation(fields: [companyId], references: [id])
  client   Client   @relation(fields: [clientId], references: [id])
  template InvoiceTemplate? @relation(fields: [templateId], references: [id])
  items    InvoiceItem[]

  @@index([companyId, date(sort: Desc)])
  @@index([companyId, status])
  @@map("invoices")
}

model InvoiceItem {
  id        String   @id @default(uuid())
  invoiceId String   @map("invoice_id")
  itemId    String?  @map("item_id")
  name      String
  hsnCode   String?  @map("hsn_code")
  batch     String?  @map("batch")
  quantity  Decimal  @db.Decimal(10, 3)
  rate      Decimal  @db.Decimal(10, 2)
  taxRate   Decimal  @map("tax_rate") @db.Decimal(5, 2)
  amount    Decimal  @db.Decimal(10, 2)
  taxAmount Decimal  @default(0) @map("tax_amount") @db.Decimal(10, 2)
  createdAt DateTime @default(now()) @map("created_at")

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  item    Item?   @relation(fields: [itemId], references: [id])

  @@index([invoiceId])
  @@map("invoice_items")
}

model InvoiceSequence {
  id        String   @id @default(uuid())
  companyId String   @map("company_id") @unique
  prefix    String?  @default("INV")
  nextNumber Int     @default(1) @map("next_number")
  updatedAt DateTime @updatedAt @map("updated_at")

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@map("invoice_sequences")
}
